
<!-- The Modal -->
<div class="modal" id="myModal-affectation">
<div class="modal-dialog">
    <div class="modal-content">

    <!-- Modal Header -->
    <div class="modal-header">
        <h6 class="modal-title">Veillez choisir l'agent qu'on veut affecter ce dossier lu</h6>
        <button type="button" class="close btn-annule" data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
       
    <form method="POST">
            <div class="form-group">
                <input required type="text" class="form-control affectDosEnregBeNum" name="affectDosEnregBeNum">
            </div>
            <div class="form-group">
                <input required type="text" class="form-control affectDosEnregBeLivreNum" name="affectDosEnregBeLivreNum">
            </div>
            <div class="input-group mb-3">
            <select class="custom-select" name="affectDosUserId" id="inputGroupSelect01">
            {% for user in users %}
                <option class="font-weight-bold" value="{{user.id}}">{{user.username}}</option>
            {% endfor %}
            </select>
            </div>
            <button type="submit" class="btn btn-info float-left">OK</button>
            <button type="button" class="btn btn-annule btn-danger float-right" data-dismiss="modal">Annuler</button>
        </form>

    </div>

    <!-- Modal footer -->
    <div class="modal-footer d-block">
    </div>

    </div>
</div>
</div>