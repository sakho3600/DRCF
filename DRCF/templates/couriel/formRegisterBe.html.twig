<!-- The Modal -->
<div class="modal" id="myModal">
<div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">

    <!-- Modal Header -->
    <div class="modal-header badge-warning">
        <h4 class="modal-title text-white">Enregistrement du courie</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
        
        <div class="container-fluid border border-secondary">
            <form id="formBE" method="POST">
            <div class="row">
                <div class="col-md-6 border-right border-secondary ">
               
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputEmail1">Numéro BE</label>
                        <input required type="text" class="form-control" name="enregBeNum" id="" placeholder="Numéro BE">
                    </div>
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Date-BE</label>
                        <input required type="text" class="form-control" name="enregBeDate" id="datepicker" placeholder="Date-BE">
                    </div>
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputEmail1">Designations</label>
                        <textarea required class="form-control" name="enregBeContenu" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Observation</label>
                        <input required type="text" name="enregBeobserve" class="form-control" id="" placeholder="Observation">
                    </div>
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputEmail1">Expéditeur</label>
                        <input required type="text" class="form-control" name="enregBeServTitulaire" id="" aria-describedby="textHelp" placeholder="Expéditeur">
                    </div>
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Numéro d'enregistrement	</label>
                        <input required type="text" class="form-control" name="enregBeLivreNum" id="" placeholder="Numéro de livre">
                    </div>
                    <div class="form-group">
                        <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Lieu</label>
                        <input required type="text" class="form-control" name="enregBeServLieu" id="" placeholder="Lieu">
                    </div>

                </div>
                <div class="col-md-6 border-left border-secondary">
                    <div class="">
                        <span class=""><small>Pour ajouter le DEF, veuillez cocher la case suivante:</small></span>
                        <span><input type="checkbox" class="input-checkbox" id=""></span><br><hr>

                        <div class="form-group">
                            <label class="text-capitalize font-weight-bold">Numéro de DEF</label>
                            <input disabled type="text" class="form-control input-def" name="enregDefNum" id="" placeholder="Numéro de DEF">
                        </div>
                        <div class="form-group">
                            <label class="text-capitalize font-weight-bold">Objet</label>
                            <input disabled type="text" class="form-control input-def" name="enregDefObjet" id="" placeholder="Objet">
                        </div>
                        <div class="form-group">
                            <label class="text-capitalize font-weight-bold">Titulaire</label>
                            <input disabled type="text" class="form-control input-def" name="enregDefTitulaire" id="" placeholder="Titulaire">
                        </div>
                        <div class="form-group">
                            <label class="text-capitalize font-weight-bold">Montant</label>
                            <input disabled type="text" class="form-control input-def" name="enregDefMontant" id="" placeholder="Montant">
                        </div>
                        <div class="form-group">
                            <label class="text-capitalize font-weight-bold">Service</label>
                            <input disabled type="text" class="form-control input-def" name="enregDefService" id="" placeholder="Service">
                        </div>
                        <div class="form-group">
                            <label class="text-capitalize font-weight-bold">Visa</label>
                            <input disabled type="text" class="form-control input-def" name="enregDefVisa" id="" placeholder="Visa">
                        </div>
                        
                    </div>
                </div>
            </div>
                <button type="submit" class="btn btn-info float-left mt-2">Enregistrer</button>
                <button type="button" class="btn btn-danger float-right mt-2" data-dismiss="modal">Annuler</button>
            </form>
        </div>
    </div>



    <!-- Modal footer -->
    <div class="modal-footer">
       
    </div>

    </div>
</div>
