
<!-- The Modal -->
<div class="modal" id="myModal-comfirmFromDelegateToCouriel">
<div class="modal-dialog">
    <div class="modal-content">

    <!-- Modal Header -->
    <div class="modal-header">
        <h6 class="modal-title">Est-ce que vous voulez passer ce dossier a un angent maintenant?</h6>
        <button type="button" class="close btn-annule" data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
       
    <form method="POST">
            <input type="text" hidden class="form-controlm" value='true' name="RETOUR_AU_COURIEL">
            <div class="form-group">
                <input type="text" class="form-control mouvHistoEnregBeLivreNum" name="mouvHistoEnregBeLivreNum">
            </div>
            <div class="form-group">
                <input type="text" class="form-control mouvHistoEnregBeNum" name="mouvHistoEnregBeNum">
            </div>
            <div class="form-group">
                <label class="text-capitalize font-weight-bold">Veuillez choisir son identifiant ou son nom:</label>
                <select class="custom-select" name="mouvHistoDest" id="inputGroupSelect01">
                {% for user in users %}
                    <option class="font-weight-bold" value="{{user.id}}">{{user.username}}</option>
                {% endfor %}
                </select>
            </div>
            <button type="submit" class="btn btn-info float-left">Passer</button>
            <button type="button" class="btn btn-annule btn-danger float-right" data-dismiss="modal">Annuler</button>
    </form>

    </div>

    <!-- Modal footer -->
    <div class="modal-footer d-block">
    </div>

    </div>
</div>
</div>