<!-- The Modal -->
<div class="modal" id="myModal-visa">
<div class="modal-dialog">
    <div class="modal-content">

    <!-- Modal Header -->
    <div class="modal-header badge-success">
        <h4 class="modal-title text-white">Enregistrement de visa</h4>
        <button type="button" class="close btn-annule " data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
        
        <form id="" method="POST">
            <div class="form-group">
                <input required type="text" class="form-control enregVisaEnregBeId" name="enregVisaEnregBeId" id="" placeholder="Numéro BE">
            </div>
            <div class="form-group">
                <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Numéro d'Enregistrement</label>
                <input required type="text" class="form-control enregVisaLivreNum" name="enregVisaLivreNum" id="" placeholder="Numéro de livre">
            </div>
            <div class="form-group">
                <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Numéro de visa</label>
                <input required type="text" name="enregVisaNum" class="form-control" id="" placeholder="Numéro de visa">
            </div>
            <div class="form-group">
                <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Date de visa</label>
                <input required type="text" name="enregVisaDate" class="form-control" id="datepicker" placeholder="Date de visa">
            </div>

            <button type="submit" class="btn btn-primary float-left" name="action" value="Créer">Créer</button>
            <button type="button" class="btn btn-danger float-right" data-dismiss="modal">Annuler</button>
        </form>

    </div>

    <!-- Modal footer -->
    <div class="modal-footer">
        
    </div>

    </div>
</div>
</div>