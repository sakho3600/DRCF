<!-- The Modal -->
<div class="modal" id="myModal-resistrator">
<div class="modal-dialog">
    <div class="modal-content">

    <!-- Modal Header -->
    <div class="modal-header badge-success">
        <h4 class="modal-title text-white">Ajouter un nouveau memmbre</h4>
        <button type="button" class="close btn-annule " data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
        
        <form id="" method="POST">
            <div class="form-group">
                <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Votre nom</label>
                <input required type="text" class="form-control" name="username" id="" placeholder="Votre nom">
            </div>
            <div class="form-group">
                <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Numéro matricule</label>
                <input required type="text" name="im" class="form-control" id="" placeholder="Numéro matricule">
            </div>
            <div class="form-group">
                <label class="text-capitalize font-weight-bold" for="exampleInputPassword1">Votre Mot de passe</label>
                <input required type="password" name="password" class="form-control" placeholder="Votre Mot de passe">
            </div>

            <button type="submit" class="btn btn-info float-left">S'inscrire</button>
            <button type="button" class="btn btn-danger float-right" data-dismiss="modal">Annuler</button>
        </form>

    </div>

    <!-- Modal footer -->
    <div class="modal-footer">
        
    </div>

    </div>
</div>
</div>