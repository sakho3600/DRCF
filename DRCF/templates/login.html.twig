<div>
 
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                
                {% if message is defined %}
                <h4 class=" active text-danger text-center" role="alert">
                    {{message}}
                </h4>
                {% endif %}

                <div class="row">
                    <div class="col-md-6 mx-auto">

                        <!-- form card login -->
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h3 class="mb-0 text-info">Login</h3>
                            </div>
                            <div class="card-body">
                                <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" action="" method="POST">
                                    <div class="form-group">
                                        <label class="text-info" for="uname1">Entrez votre nom</label>
                                        <input type="text" class="form-control form-control-lg rounded-0" name="login" id="uname1" required="">
                                        <div class="invalid-feedback">Oops, ce champs est maquand .</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="text-info">Entrez votre mot depasse</label>
                                        <input type="password" class="form-control form-control-lg rounded-0" name="password" id="pwd1" required="" autocomplete="new-password">
                                        <div class="invalid-feedback">Entre aussi votre mot depasse!</div>
                                    </div>
                                    <div>
                                        <label class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Login</button>
                                </form>
                            </div>
                            <!--/card-block-->
                        </div>
                        <!-- /form card login -->

                    </div>


                </div>
                <!--/row-->

            </div>
            <!--/col-->
        </div>
        <!--/row-->
    </div>
    <!--/container-->

</div>

